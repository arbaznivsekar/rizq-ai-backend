{
  "name": "rizq-ai-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "lint": "eslint .",
    "test": "vitest --config vitest.config.ts run",
    "test:watch": "vitest --config vitest.config.ts",
    "test:unit": "vitest --config vitest.config.ts run test/endpoints test/helpers",
    "test:integration": "vitest --config vitest.config.ts run test/integration",
    "test:scraping": "vitest --config vitest.config.ts run test/integration/scraping",
    "test:email": "vitest --config vitest.config.ts run test/integration/email",
    "test:workflows": "vitest --config vitest.config.ts run test/integration/workflows",
    "test:coverage": "vitest --config vitest.config.ts run --coverage",
    "test:ci": "vitest --config vitest.config.ts run --reporter=json --reporter=default",
    "ensure-indexes": "tsx scripts/ensure-indexes.ts",
    "warm-cache": "tsx scripts/warm-cache.ts",
    "prepare": "echo 'Husky setup skipped'"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bullmq": "^5.7.6",
