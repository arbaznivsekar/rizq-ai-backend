    "etag": "^1.8.1",
    "express": "^4.19.2",
    "googleapis": "^160.0.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.4.1",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-rc.3",
    "nodemailer": "^7.0.10",
    "openai": "^4.104.0",
    "p-limit": "^5.0.0",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.55.0",
    "prom-client": "^15.1.2",
    "sanitize-html": "^2.17.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
