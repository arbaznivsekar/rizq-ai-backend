    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "bcrypt": "^6.0.0",
    "eslint": "^8.57.0",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.0.0",
