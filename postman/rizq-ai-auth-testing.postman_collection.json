              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\"\n}"
            },
            "description": "Login with existing user credentials. Returns a JWT token for authentication."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save the auth token for future requests",
